[alias]
	a = add
	ap = add -p
	aa = add .
	b = branch
	bd = branch -D
	ca = commit --amend
	cm = commit -m
	co = checkout
	cp = cherry-pick
	d = diff
	dc = diff --cached
	f = fetch
	l = log --oneline --graph --decorate
	p = push
	pf = push --force-with-lease
	pr = pull --rebase
	rh = reset --hard
	s = status -s
	sh = show
	st = stash
	sta = stash apply
	std = stash drop
	stl = stash list
	stp = stash pop
	unstage = reset HEAD --
[color]
	ui = true
[push]
	# Push to the same branch you are on
	default = current
[fetch]
	# Prune remote branches that no longer exist
	prune = true
